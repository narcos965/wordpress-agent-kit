{
  "name": "wordpress-agent-kit",
  "version": "0.1.0",
  "description": "WordPress-focused AGENTS.md + Agent Skills starter kit for AI coding agents.",
  "license": "GPL-2.0-or-later",
  "private": false,
  "type": "module",
  "keywords": [
    "wordpress",
    "agents",
    "agents-md",
    "agent-skills",
    "ai-coding",
    "copilot"
  ],
  "engines": {
    "node": ">=20.18"
  },
  "bin": {
    "wp-agent-kit": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsc",
    "check": "tsc --noEmit",
    "lint": "eslint src/ --fix",
    "test": "vitest",
    "install:kit": "tsx src/cli.ts install",
    "sync:skills": "tsx src/cli.ts sync-skills",
    "setup": "tsx src/cli.ts setup",
    "playground": "tsx src/cli.ts playground",
    "build:release": "tsx scripts/build-release.ts"
  },
  "dependencies": {
    "@clack/prompts": "^0.8.2",
    "commander": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.1",
    "eslint": "^9.16.0",
    "prettier": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "vitest": "^2.1.8"
  }
}
