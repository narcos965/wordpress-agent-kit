{
  "name": "wordpress-agent-kit",
  "version": "0.1.0",
  "description": "WordPress-focused AGENTS.md + Agent Skills starter kit for AI coding agents.",
  "license": "GPL-2.0-or-later",
  "private": false,
  "type": "module",
  "keywords": [
    "wordpress",
    "agents",
    "agents-md",
    "agent-skills",
    "ai-coding",
    "copilot"
  ],
  "engines": {
    "node": ">=20.18"
  },
  "bin": {
    "wp-agent-kit": "./dist/cli.js"
  },
  "scripts": {
    "dev": "node --loader ts-node/esm src/cli.ts",
    "build": "tsc",
    "check": "tsc --noEmit",
    "lint": "eslint src/ --fix",
    "test": "vitest",
    "install:kit": "node --loader ts-node/esm src/cli.ts install",
    "sync:skills": "node --loader ts-node/esm src/cli.ts sync-skills",
    "setup": "node --loader ts-node/esm src/cli.ts setup",
    "playground": "node --loader ts-node/esm src/cli.ts playground",
    "build:release": "node scripts/build-release.mjs"
  },
  "dependencies": {
    "@clack/prompts": "^0.8.2",
    "commander": "^14.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.0"
  }
}
